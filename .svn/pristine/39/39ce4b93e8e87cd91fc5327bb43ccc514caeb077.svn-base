<div class="main-content">
  <div class="container">
      <div class="row">
          <div class="col-md-8">
              <div class="card">
                  <div class="card-header" data-background-color="red">
                      <h4 class="title">Find your email</h4>
                      <p class="category">Enter Your Recovery Email to Reset Your Oathello Password!</p>
                  </div>
                  <div class="clearfix"></div>
                  <div class="card-content">
                    <div class=" clearfix"></div>
                    <form [formGroup]="verifyMailFormGroup" (ngSubmit)="ConfirmMail()">
                    <div class="row">
                      <div class="col-md-12">
                            
                            <div class="card-panel teal">
                                <p></p>
                                <p>Submit your email address and we'll send you a link to reset your password. </p> 
                            </div>
                         
                            <div class="form-group label-floating">
                                <div class="col-md-10">
                                <label class="control-label">Email ID</label>
                                <input type="text" id="txtverifyemail" formControlName="verifymail" class="form-control">
                                <span class="help-block" style="color:red" *ngIf="(verifyMailFormGroup.get('verifymail').touched || verifyMailFormGroup.get('verifymail').dirty)
                                && verifyMailFormGroup.get('verifymail').errors">
                                     <span *ngIf="verifyMailFormGroup.get('verifymail').errors.required">
                                        Email ID is required.
                                     </span>   
                                     <span *ngIf="verifyMailFormGroup.get('verifymail').errors.pattern">
                                        Email ID is not Valid.
                                  </span>                        
                                 </span>
                                </div>
                                <div class="col-md-2">
                                    <input type="submit" id="btnverifymail" class="btn btn-danger" value="Confirm">
                                </div>
                            </div>
                         
                            <div>
                              <p>If you have any other Oathello account, <a href="login">click here</a> to Sign In</p>
                            </div>
                          <div>

                          </div>
                      </div>
                    </div>
                </form>
                  </div>
              </div>
          </div>         
      </div>
  </div>
  </div>
  
